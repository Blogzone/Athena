<%- include('../includes/head.ejs') %>
</head>
<body>
    <div class="login-container">
        <div class="sign-in-container">
            
            <form class="login" action="/reset" method="POST">
                <h1 class="login__text">Reset Password</h1>
                <% if(errorFlash) { %>
                    <div class="login__user-feedback"><h4 style="color: #ff443a;"><%= errorFlash %></h4></div>
                <% } %>
                <input class="login__email" type="email" name="email" placeholder="email">
	            <button class="login__btn disable-select" type="submit">Reset Password</button>
                
            </form>
        </div>
        <div class="overlay">
            <div class="overlay-panel overlay-right disable-select">
                <h1 class="overlay-panel--primary">Hey there!</h1>
                <p class="overlay-panel--secondary">Join today and start posting your thoughts</p>
                <a href="/signup">
                    <button class="overlay-panel__btn">Sign Up</button>
                </a>
            </div>
        </div>
    </div>
    
</body>
</html>